<%- include('partials/header') %>
<div class="container mt-5">
    <h3 class="text-center mb-4">Welcome, <%= user.username %> ðŸ‘‹</h3>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form method="POST" action="/dashboard/select-courses" class="shadow p-4 bg-light rounded">
                <h5>Select your courses</h5>
                <% let courseList = ['Cloud Computing', 'DBMS', 'NLP', 'AI', 'Computer Networks']; %>
                <% courseList.forEach(course => { %>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" name="courses" value="<%= course %>"
                            <%= user.selectedCourses.includes(course) ? 'checked' : '' %> >
                        <label class="form-check-label"><%= course %></label>
                    </div>
                <% }); %>
                <button class="btn btn-primary mt-3">Save Courses</button>
            </form>
        </div>
    </div>
</div><br><br><br><br>

<%- include('partials/footer') %>
